@model test9.Models.CourseCategories

@{
    ViewBag.Title = "Details";
}
@if (User.IsInRole("Trainer"))
{
    <h2>Details</h2>

    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Category Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseCatName)
            </dd>

            <dt>
                @Html.DisplayName("Category Description")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseCatDes)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.CourseCatID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}