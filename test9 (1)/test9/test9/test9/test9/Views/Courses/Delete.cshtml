@model test9.Models.Course

@{
    ViewBag.Title = "Delete";
}
@if (User.IsInRole("Trainer"))
{
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Course</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Course Category")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseCategories.CourseCatName)
            </dd>

            <dt>
                @Html.DisplayName("Instructor")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Trainer.UserName)
            </dd>

            <dt>
                @Html.DisplayName("Course Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseName)
            </dd>

            <dt>
                @Html.DisplayName("Course Description")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseDes)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
}