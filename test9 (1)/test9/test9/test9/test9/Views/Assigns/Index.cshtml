@model IEnumerable<test9.Models.Assign>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
}
@if (User.IsInRole("Trainer"))
{
    <h2>Index</h2>
  
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainee.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AssignID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AssignID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AssignID })
                </td>
            </tr>
        }

    </table>
}